<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_song_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:src="@drawable/close_btn_material"
        android:layout_marginStart="15dp"
        android:backgroundTint="#2196F3"/>

    <ImageView
        android:id="@+id/song_playing_pic"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/add_song_exit_btn"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
        android:textSize="24sp"
        android:typeface="sans"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/song_playing_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_below="@+id/song_playing_pic"
        android:fontFamily="casual"
        android:layout_marginStart="15dp"/>

    <TextView
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline1"
        android:textSize="22sp"
        android:typeface="sans"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/song_playing_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:layout_below="@+id/song_playing_title"
        android:fontFamily="casual"
        android:layout_marginStart="15dp"/>
</RelativeLayout>